// Place your settings in this file to overwrite default and user settings.
{
     // Controls whether eslint is enabled for JavaScript files or not.
    "eslint.enable": true,

    // A path added to NODE_PATH when resolving the eslint module.
    "eslint.nodePath": null,

    // Uses the legacy module resolving.
    "eslint._legacyModuleResolve": false,

    // The eslint options object to provide args normally passed to eslint when executed from a command line.
    "eslint.options": {
    "rules": {
    "eqeqeq": "error",
    "indent": ["error", 2, {
      "SwitchCase": 1,
      "VariableDeclarator": {
        "var": 2,
        "let": 2,
        "const": 3
      }
    }],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single", {
      "avoidEscape": true,
      "allowTemplateLiterals": true
    }],
    "no-inline-comments": "error",
    "semi": ["error", "never"],
    "semi-spacing": "error",
    "comma-spacing": "error",
    "block-spacing": "error",
    "space-before-blocks": "error",
    "arrow-spacing": "error",
    "keyword-spacing": "error",
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "named": "never"
    }],
    "space-in-parens": "error",
    "object-curly-spacing": "error",
    "no-whitespace-before-property": "error",
    "brace-style": ["error", "1tbs", {
      "allowSingleLine": true
    }],
    "max-len": ["error", 100, 2],
    "no-nested-ternary": "error",
    "padded-blocks": ["error", "never"],
    "handle-callback-err": "error",
    "no-console": "warn",
    "no-undef": "warn",
    "no-unused-vars": "warn"
  }},

    // Traces the communication between VSCode and the eslint linter service.
    "eslint.trace.server": "off",

    // Run the linter on save (onSave) or on type (onType)
    "eslint.run": "onType",

    // Turns auto fix on save on or off.
    "eslint.autoFixOnSave": true
}